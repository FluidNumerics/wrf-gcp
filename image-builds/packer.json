{
  "variables": {
    "project_id": "",
    "zone": "us-central1-f",
    "image_name":"wrf-gcp-gcc-openmpi",
    "subnet": "default",
    "source_image": "fluid-slurm-gcp-compute-centos",
    "source_image_project": "fluid-cluster-ops"
  },
  "builders": [{
    "type": "googlecompute",
    "project_id": "{{user `project_id`}}",
    "source_image": "{{user `source_image`}}",
    "source_image_project_id": "{{user `source_image_project`}}",
    "disk_size": 150,
    "machine_type": "n1-standard-8",
    "zone": "{{user `zone`}}",
    "subnetwork" :"{{user `subnet`}}",
    "image_family": "{{user `image_name`}}-openmp",
    "image_name": "{{user `image_name`}}-openmp",
    "instance_name":"{{user `image_name`}}-image-node-{{timestamp}}",
    "tags":["cloudbuild"],
    "ssh_username": "packer"
  }],
  "provisioners": [
    {
      "type": "file",
      "source": "./benchmark/",
      "destination": "/tmp/"
    },
    {
      "type": "shell",
      "inline": ["sudo mkdir /opt/benchmark", 
	         "sudo mv /tmp/wrfstats.py /opt/benchmark/",
	         "sudo mv /tmp/conus-2.5km /opt/benchmark/",
	         "sudo mv /tmp/conus-12km /opt/benchmark/"]
    },
    {
      "type": "file",
      "source": "./image-builds/optimizations/sysctl.conf",
      "destination": "/tmp/"
    },
    {
      "type": "file",
      "source": "./image-builds/optimizations/grub",
      "destination": "/tmp/"
    },
    {
      "type": "shell",
      "inline":[ "sudo mv /tmp/sysctl.conf /etc/sysctl.conf",
	         "sudo mv /tmp/grub /etc/default/grub",
                 "sudo sysctl -p", 
		 "sudo grub2-mkconfig -o /boot/efi/EFI/centos/grub.cfg",
	         "sudo systemctl stop firewalld",
                 "sudo systemctl disable firewalld",
                 "sudo systemctl mask --now firewalld"]
    },
    {
      "type": "shell",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E /bin/bash '{{ .Path }}'",
      "script": "./image-builds/wrf-install.sh"
    },
    {
      "type": "shell",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E /bin/bash '{{ .Path }}'",
      "script": "./benchmark/conus-2.5km/data-install-from-gcs.sh"
    },
    {
      "type": "shell",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E /bin/bash '{{ .Path }}'",
      "script": "./benchmark/conus-12km/data-install-from-gcs.sh"
    }
  ]
}

