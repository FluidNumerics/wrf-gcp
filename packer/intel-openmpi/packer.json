{
  "variables": {
    "project_id": "",
    "zone": "us-central1-f",
    "image_name":"wrf-gcp-intel-openmpi",
    "subnet": "default",
    "source_image": "fluid-slurm-gcp-compute-centos",
    "source_image_project": "fluid-cluster-ops"
  },
  "builders": [{
    "type": "googlecompute",
    "project_id": "{{user `project_id`}}",
    "source_image": "{{user `source_image`}}",
    "source_image_project_id": "{{user `source_image_project`}}",
    "disk_size": 50,
    "machine_type": "n1-standard-8",
    "zone": "{{user `zone`}}",
    "subnetwork" :"{{user `subnet`}}",
    "image_family": "{{user `image_name`}}",
    "image_name": "{{user `image_name`}}",
    "instance_name":"{{user `image_name`}}-image-node-{{timestamp}}",
    "tags":["cloudbuild"],
    "ssh_username": "packer"
  }],
  "provisioners": [
    {
      "type": "file",
      "source": "./intel-openmpi/sysctl.conf",
      "destination": "/etc/sysctl.conf"
    },
    {
      "type": "file",
      "source": "./intel-openmpi/configure.wrf",
      "destination": "/tmp/configure.wrf"
    },
    {
      "type": "shell",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E /bin/bash '{{ .Path }}'",
      "script": "./intel-openmpi/wrf-install.sh"
    }
  ]
}

